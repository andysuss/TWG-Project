<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.geofence" version="1.0.0">
    <name>POS Verification</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="content:///*" />
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <allow-navigation href="http://*/*"/>
    <allow-navigation href="https://*/*"/>
    <allow-navigation href="data:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/Default-568h@2x.png" density="land-hdpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="land-ldpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="land-mdpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="land-xhdpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="port-hdpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="port-ldpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="port-mdpi"/>
        <splash src="res/screen/android/Default-568h@2x.png" density="port-xhdpi"/>
        <icon src="icon.png" />
    </platform>

    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <icon src="icon.png" />
        <splash src="res/screen/android/Default-568h@2x.png" width="320" height="480"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="640" height="960"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="768" height="1024"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="1536" height="2048"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="1024" height="768"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="2048" height="1536"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="640" height="1136"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="750" height="1334"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="1242" height="2208"/>
        <splash src="res/screen/android/Default-568h@2x.png" width="2208" height="1242"/>
    </platform>

</widget>
